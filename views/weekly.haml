              %form#mc-embedded-subscribe-form.validate{:action => "//teamjosh.us10.list-manage.com/subscribe/post?u=4f9c7608b2821620b8ae8050c&id=ffd71e75d3", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
                #mc_embed_signup_scroll
                  .mc-field-group
                    %label{:for => "mce-email"} Email Address
                    %br/
                    %input#mce-email.required.email{:name => "email", :type => "email", :value => "", style: "font-size:16px;font-family:'Open Sans';padding:0.2em 0.5em;"}/
                  #mce-responses.clear
                    #mce-error-response.response{:style => "display:none"}
                    #mce-success-response.response{:style => "display:none"}
                  / real people should not fill this in and expect good things - do not remove this or risk form bot signups
                  %div{:style => "position: absolute; left: -5000px;"}
                    %input{:name => "b_4f9c7608b2821620b8ae8050c_ffd71e75d3", :tabindex => "-1", :type => "text", :value => ""}/
                  .clear
                    %input#mc-embedded-subscribe.button{:name => "subscribe", :type => "submit", :value => "Subscribe", style: "color:white;background:#2497EE;cursor:pointer;"}/
            / end mc_embed_signup
